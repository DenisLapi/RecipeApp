@model IEnumerable<RecipeApp.Models.ContactMessage>

@{
    ViewData["Title"] = "Index";
}

<h1>All messages</h1>

<table class="table mt-4">
    <thead>
        <tr>
            <th>
                Status
            </th>
            <th>
                Full name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Read)
                {
                    <span class="badge badge-success">Read</span>
                }
                else
                {
                    <span class="badge badge-secondary">Pending</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
