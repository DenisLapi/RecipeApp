@model RecipeApp.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-danger my-4" role="alert">
    Are you sure you want to delete this?
</div>

<div>
    <div>
        <div class="page__cover-image" style="background-image: url('@Model.Photo')"></div>
        <h1 class="mt-4">@Model.Name</h1>
        <div class="mt-3 mb-4 recipe-details">
            <span class="mr-3 d-inline-flex align-items-center">
                <i class='bx bx-time'></i>
                <span class="text">
                    @Model.Duration minutes
                </span>
            </span>
            <span class="mr-3 d-inline-flex align-items-center">
                <i class='bx bx-calendar'></i>
                <span class="text">
                    @Model.CreatedAt
                </span>
            </span>
            <span class="mr-3 d-inline-flex align-items-center">
                <i class='bx bx-package'></i>
                <span class="text">
                    @Model.Category.Name
                </span>
            </span>
            <span class="mr-3 d-inline-flex align-items-center">
                <i class='bx bx-tachometer'></i>
                <span class="text">
                    @Model.Complexity.Name
                </span>
            </span>
        </div>
        <p class="mb-5">@Model.Content</p>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </form>
</div>
