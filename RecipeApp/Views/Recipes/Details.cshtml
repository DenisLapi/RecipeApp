@model RecipeApp.Models.Recipe

@{
    ViewData["Title"] = "Details";
}
<div>
    <div class="page__cover-image" style="background-image: url('@Model.Photo')"></div>
    <h1 class="mt-4">@Model.Name</h1>
    <div class="mt-3 mb-4 recipe-details">
        <span class="mr-3 d-inline-flex align-items-center">
            <i class='bx bx-time'></i>
            <span class="text">
                @Model.Duration minutes
            </span>
        </span>
        <span class="mr-3 d-inline-flex align-items-center">
            <i class='bx bx-calendar'></i>
            <span class="text">
                @Model.CreatedAt
            </span>
        </span>
        <span class="mr-3 d-inline-flex align-items-center">
            <i class='bx bx-package'></i>
            <span class="text">
                @Model.Category.Name
            </span>
        </span>
        <span class="mr-3 d-inline-flex align-items-center">
            <i class='bx bx-tachometer'></i>
            <span class="text">
                @Model.Complexity.Name
            </span>
        </span>
    </div>
    <p class="mb-5">@Model.Content</p>
</div>
<div>
    @if (this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
