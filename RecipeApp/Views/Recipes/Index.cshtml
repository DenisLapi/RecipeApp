@model IEnumerable<RecipeApp.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<h1>Recipes</h1>

@if (this.User.IsInRole("Administrator"))
{
    <p class="mt-4">
        <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
    </p>
}

@* Recipes List *@
<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm rounded mb-3 w-100" style="width: 18rem;">
                <div class="card-background-image-wrapper" style="background-image: url('@item.Photo')"></div>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Content</p>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (this.User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>